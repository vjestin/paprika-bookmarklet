{
  "name": "__MSG_extension_name__",
  "version": "${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}",
  "description": "__MSG_extension_description__",
  "default_locale": "en",
  "homepage_url": "https://github.com/vjestin/paprika-bookmarklet",
  "icons": { "128": "images/icon.png" },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs", "storage"
  ],
  "browser_action": {
  	"default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "css/style.css"
      ],
      "js": [
        "lib/jquery-1.11.1.min.js",
        "lib/jquery.colorbox-min.js",
        "content_script.js"
	     ]
  	},
    {
      "matches": [
        "https://*.paprikaapp.com/bookmarklet*",
        "https://paprikaapp.com/bookmarklet*"
      ],
      "all_frames": true,
      "js": [
        "lib/jquery-1.11.1.min.js",
        "bookmarklet.js"
      ]
    }
  ],
  "manifest_version": 2
}
